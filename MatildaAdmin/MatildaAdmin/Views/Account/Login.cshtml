@using MVC5App.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
<head>
    <!--Start meta-->
    <meta charset="utf-8">
    <title>@ViewBag.Title- Matilda Mirror Admin Dashboard by Sahib for Matilda Admin Dashboard</title>
    <meta name="description" content="Matilda Mirror Admin Dashboard">
    <meta name="author" content="Sahib">
    <meta name="keyword" content="Matilda, Matilda UI, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <!-- end: Meta -->
    <!-- start: Mobile Specific -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- end: Mobile Specific -->
    <!--css-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&subset=latin,cyrillic-ext,latin-ext' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    <!--end css-->
    <!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <link id="ie-style" href="~/css/ie.css" rel="stylesheet">
    <![endif]-->
    <!--[if IE 9]>
        <link id="ie9style" href="~/css/ie9.css" rel="stylesheet">
    <![endif]-->
    <!-- start: Favicon -->
    <link rel="shortcut icon" href="~/~/img/favicon.ico">
    <!-- end: Favicon -->
    <!--scripts-->
    <!--end script-->
</head>

@section Scripts {
    @Scripts.Render("~/bundles/bootstrap")
}

<style type="text/css">
    body {
        background: url(/img/bg-login.jpg) !important;
    }
</style>
<div class="row-fluid">

    <div class="row-fluid">
        <div class="login-box">
            <div class="icons">
                <a href="/"><i class="halflings-icon home"></i></a>
                <a href="#"><i class="halflings-icon cog"></i></a>
            </div>
            <h2>Login to your account</h2>           
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()               
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <fieldset>
                    <div class="input-prepend" title="Username">
                        <span class="add-on"><i class="halflings-icon user"></i></span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "input-large span10" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <div class="input-prepend" title="Password">
                        <span class="add-on"><i class="halflings-icon lock"></i></span>
                        @Html.PasswordFor(m => m.Password, new { @class = "input-large span10" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="clearfix"></div>
                    <label class="remember" for="remember">
                        @Html.CheckBoxFor(m => m.RememberMe,new { @style = "top: -3px;position: relative;" })
                        <span>Remember me</span>
                    </label>
                    <div class="button-login">
                        <button type="submit" class="btn btn-primary">Login</button>
                        @Html.ActionLink("Register as a new user", "Register",null,new { @class = "btn btn-primary" })
                    </div>
                    <div class="clearfix"></div>
                </fieldset>                   
            }
            <hr>
            <h3>Forgot Password?</h3>
            <p>
                No problem, @Html.ActionLink("Click here", "ForgotPassword") to get a new password.
            </p>
            
        </div><!--/span-->
    </div><!--/row-->
</div>
